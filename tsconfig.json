{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "sourceMap": false,
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ],
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}